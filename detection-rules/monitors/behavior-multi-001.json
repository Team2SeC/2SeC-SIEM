{
  "type": "monitor",
  "name": "BEHAVIOR-MULTI-001 - Multi-Vector Attack",
  "enabled": true,
  "schedule": {
    "period": {
      "interval": 5,
      "unit": "MINUTES"
    }
  },
  "inputs": [
    {
      "search": {
        "indices": ["2sec-siem-*"] ,
        "query": {
          "size": 0,
          "query": {
            "bool": {
              "must": [
                {
                  "exists": {
                    "field": "attack.rule_id"
                  }
                }
              ],
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                      "gte": "now-5m"
                    }
                  }
                }
              ]
            }
          },
          "aggs": {
            "by_source": {
              "terms": {
                "field": "source.ip",
                "size": 1000
              },
              "aggs": {
                "distinct_attack_types": {
                  "cardinality": {
                    "field": "attack.category"
                  }
                }
              }
            }
          }
        }
      }
    }
  ],
  "triggers": [
    {
      "name": "BEHAVIOR-MULTI-001 trigger",
      "severity": 1,
      "condition": {
        "script": {
          "lang": "painless",
          "source": "for (def b : ctx.results[0].aggregations.by_source.buckets) { if (b.distinct_attack_types.value >= 3) { return true; } } return false;"
        }
      },
      "actions": []
    }
  ]
}
