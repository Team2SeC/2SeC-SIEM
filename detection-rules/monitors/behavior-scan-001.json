{
  "type": "monitor",
  "name": "BEHAVIOR-SCAN-001 - Web Scanning Activity",
  "enabled": true,
  "schedule": {
    "period": {
      "interval": 1,
      "unit": "MINUTES"
    }
  },
  "inputs": [
    {
      "search": {
        "indices": ["2sec-siem-*"] ,
        "query": {
          "size": 0,
          "query": {
            "bool": {
              "must": [
                {
                  "term": {
                    "attack.rule_id": "WEB-SCAN-001"
                  }
                }
              ],
              "filter": [
                {
                  "range": {
                    "@timestamp": {
                      "gte": "now-1m"
                    }
                  }
                }
              ]
            }
          },
          "aggs": {
            "by_source": {
              "terms": {
                "field": "source.ip",
                "min_doc_count": 30
              }
            }
          }
        }
      }
    }
  ],
  "triggers": [
    {
      "name": "BEHAVIOR-SCAN-001 trigger",
      "severity": 3,
      "condition": {
        "script": {
          "lang": "painless",
          "source": "return ctx.results[0].aggregations.by_source.buckets.size() > 0;"
        }
      },
      "actions": []
    }
  ]
}
