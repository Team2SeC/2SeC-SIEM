#==============================================================================
# 2SeC SIEM Logstash Pipeline Configuration
# CloudWatch Logs → Kinesis → Logstash → OpenSearch
# Safe / Defensive Version (Decode Failure Preserved)
#==============================================================================

############################
# INPUT
############################
input {
  kinesis {
    kinesis_stream_name => "${KINESIS_STREAM_NAME}"
    region              => "${AWS_REGION}"
    application_name    => "${APPLICATION_NAME}"

    # charset 강제하지 않음 (UTF-8 기본)
    codec => plain

    tags => ["kinesis", "cloudwatch"]
  }
}

############################
# FILTER
############################
filter {

  ###########################################################################
  # 0. 원본 message 백업 (절대 삭제하지 않음)
  ###########################################################################
  mutate {
    add_field => {
      "[@metadata][raw_message]" => "%{message}"
    }
  }

  ###########################################################################
  # 1. CloudWatch Subscription payload 처리
  #    - JSON {"awslogs":{"data":"..."}} 인지 먼저 확인
  ###########################################################################
  ruby {
    code => "
      require 'json'
      require 'base64'
      require 'zlib'
      require 'stringio'

      raw = event.get('message')
      decoded_payload = nil

      begin
        parsed = JSON.parse(raw)

        if parsed.is_a?(Hash) && parsed.dig('awslogs', 'data')
          # CloudWatch Subscription 표준 포맷
          b64 = parsed['awslogs']['data']
          gz  = Base64.decode64(b64)
          decoded_payload = Zlib::GzipReader.new(StringIO.new(gz)).read
          event.tag('cw_subscription')
        end
      rescue
        # JSON 파싱 실패 → 다음 단계에서 다른 방식 시도
      end

      # JSON이 아니었거나 awslogs.data가 없을 경우
      if decoded_payload.nil?
        begin
          gz = Base64.decode64(raw)
          decoded_payload = Zlib::GzipReader.new(StringIO.new(gz)).read
          event.tag('cw_base64_only')
        rescue
          event.tag('cw_decode_failed')
        end
      end

      if decoded_payload
        event.set('[@metadata][cw_payload]', decoded_payload)
        event.remove('message')
      end
    "
  }

  ###########################################################################
  # 2. CloudWatch payload JSON 파싱
  ###########################################################################
  if [@metadata][cw_payload] {
    json {
      source => "[@metadata][cw_payload]"
      target => "cw"
      ecs_compatibility => disabled
    }
  }

  ###########################################################################
  # 3. logEvents 배열 분해 (핵심)
  ###########################################################################
  if [cw][logEvents] {
    split {
      field => "[cw][logEvents]"
    }

    mutate {
      replace => {
        "message" => "%{[cw][logEvents][message]}"
      }
    }

    date {
      match  => ["[cw][logEvents][timestamp]", "UNIX_MS"]
      target => "@timestamp"
    }
  }

  ###########################################################################
  # 4. 웹 로그 파싱 (Apache / Nginx Combined)
  ###########################################################################
  grok {
    match => {
      "message" => "%{IPORHOST:[source][ip]} %{USER:ident} %{USER:auth} \\[%{HTTPDATE:[http][timestamp]}\\] \"%{WORD:[http][request][method]} %{NOTSPACE:[url][original]} HTTP/%{NUMBER:[http][version]}\" %{NUMBER:[http][response][status_code]} (?:%{NUMBER:[http][response][body][bytes]}|-)"
    }
    add_tag => ["web_parsed"]
    ecs_compatibility => disabled
  }

  ###########################################################################
  # 5. URL 파싱
  ###########################################################################
  if [url][original] {
    ruby {
      code => "
        require 'uri'
        begin
          uri = URI.parse(event.get('[url][original]'))
          event.set('[url][path]', uri.path)
          event.set('[url][query]', uri.query) if uri.query
        rescue
          event.tag('url_parse_error')
        end
      "
    }
  }

  ###########################################################################
  # 6. GeoIP
  ###########################################################################
  if [source][ip] {
    geoip {
      source => "[source][ip]"
      target => "[source][geo]"
      ecs_compatibility => disabled
    }
  }

  ###########################################################################
  # 7. 기본 필드 / ECS 성격 필드
  ###########################################################################
  mutate {
    add_field => {
      "pipeline"          => "${PROJECT_NAME}-logstash"
      "[event][kind]"     => "event"
      "[event][category]" => "web"
      "[event][dataset]"  => "web.access"
    }

    remove_field => [
      "@version",
      "cw",
      "ident",
      "auth"
    ]
  }

  ###########################################################################
  # 8. HTTP 응답 코드 기반 outcome
  ###########################################################################
  if [http][response][status_code] {
    ruby {
      code => "
        code = event.get('[http][response][status_code]').to_i
        event.set(
          '[event][outcome]',
          code < 400 ? 'success' : 'failure'
        )
      "
    }
  }
}

############################
# OUTPUT
############################
output {
  opensearch {
    hosts => ["https://${OPENSEARCH_HOST}"]
    index => "2sec-siem-%{+yyyy.MM.dd}"

    auth_type => {
      type   => "aws_iam"
      region => "${AWS_REGION}"
    }

    ecs_compatibility => disabled
    manage_template   => false
  }
}